<Window x:Class="WPFGrowlNotification.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification generator"
        Width="300"
        Height="234">
	<StackPanel>
		<Button Height="30"
		        Margin="4"
		        Click="ButtonClickAddSampleNotification">
			Add notification
		</Button>
		<Button Height="30"
		        Margin="4"
		        Click="ButtonClickAddAnotherSampleNotification">
			Add notification
		</Button>
		<Button Height="30"
		        Margin="4"
		        Click="ButtonClickRemoveVisibleNotifications">
			Remove visible notifications
		</Button>
		<Button Height="30"
		        Margin="4"
		        Click="ButtonClickCloseAllNotifications">
			Close all notifications
		</Button>
        <Button 
			Height="30"
			Margin="4"
			Click="ButtonClickCloseLastNotification" Content="Close last notification"/>
    </StackPanel>
</Window>
